<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backtn"
    tools:context=".Pancard" >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pan Card"
        android:typeface="monospace"
        android:textSize="25dp"
        android:textColor="#FFFF"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout 
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/pancard"
        >
        <LinearLayout 
            android:layout_width="220dp"
            android:layout_height="170dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            >
            <ImageView 
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/qrcode"/>
             <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="4"
            android:orientation="vertical">
            
                 
                 <TextView 
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="CLBPA83567Q"
                     android:textColor="#000000"
                     android:textSize="20dp"
                     android:layout_weight="1"
                     android:layout_marginLeft="2dp"
                     android:layout_marginTop="25dp"
                     android:textStyle="bold"/>
                 
                 
             <TextView 
                android:id="@+id/panname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:typeface="serif"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                />
                <TextView 
                android:id="@+id/panfathername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:typeface="serif"
                android:textColor="#000000"
                android:layout_weight="1"
                 android:textSize="18dp"
                android:layout_marginLeft="20dp"
                />
                  <TextView 
                android:id="@+id/panyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:typeface="serif"
                android:layout_weight="1"
                 android:textSize="18dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"/>
            
        </LinearLayout>
            
             
            
        </LinearLayout>
       
        
        <ImageView 
            android:id="@+id/panimg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_weight="1"
             android:layout_gravity="right|bottom"
            
            />
       
        
    </LinearLayout>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About pan card"
        android:typeface="monospace"
        android:textSize="20dp"
        android:textColor="#FFFF"
        android:layout_marginTop="20dp"
        />
    
    
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Permanent Account Number is a code that acts as an identification for individuals, families and corporates, especially those who pay Income Tax. It is a unique, 10-character alpha-numeric identifier"
        android:typeface="monospace"
        android:textSize="15dp"
        android:textColor="#000000"
        />
</LinearLayout>
