<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backtn"
    tools:context=".Rationcard" >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ration Card"
        android:typeface="monospace"
        android:textSize="25dp"
        android:textColor="#FFFF"
        android:layout_gravity="center_horizontal"/>
    
     <LinearLayout 
         android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/rationtn"    
        >

        <LinearLayout
            
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/ratimg"
            android:orientation="vertical" >
            
            <ImageView 
                android:id="@+id/imgration"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="110dp"
            android:layout_height="130dp"
            android:layout_marginTop="70dp"
            android:weightSum="4"
            android:orientation="vertical">
            
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Name"
               android:layout_weight="1"
               android:typeface="sans"
               />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Father Name"
                android:layout_weight="1"
               android:typeface="sans"
               />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Date of Birth"
                android:layout_weight="1"
               android:typeface="sans"
               />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Address"
                android:layout_weight="1"
               android:typeface="sans"
               android:layout_marginBottom="20dp"
               />
            
            
        </LinearLayout>
        
         <LinearLayout 
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical">
             
             
             <TextView 
                 android:id="@+id/ratN"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
               android:layout_weight="1"
               android:typeface="sans"
               />
           <TextView 
               android:id="@+id/ratF"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=" "
                android:layout_weight="1"
               android:typeface="sans"
               />
           <TextView 
               android:id="@+id/ratDob"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=" "
                android:layout_weight="1"
               android:typeface="sans"
               />
           <TextView 
               android:id="@+id/ratAdd"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=""
                android:layout_weight="1"
               android:typeface="sans"
               android:layout_marginBottom="20dp"
               />
         </LinearLayout>
        
       
       
        
    </LinearLayout>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Ration card"
        android:typeface="monospace"
        android:textSize="20dp"
        android:textColor="#FFFF"
        android:layout_marginTop="20dp"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="   Smart Ration Card Tamil Nadu. Smart ration card is a replacement of the normal ration card, which is normally used to supply food grains and other provisions by the government at a subsidized cost to a specific class of people in the society."
        android:typeface="monospace"
        android:textSize="15dp"
        android:textColor="#000000"
        />

</LinearLayout>
